{
  "name": "agent-skills-manager",
  "displayName": "Agent Skills - Browse, Install & Manage",
  "description": "Browse, install, and manage Agent Skills for AI coding agents like Cursor, Claude Code, Codex, and more",
  "version": "0.1.3",
  "publisher": "laurids",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lauridskern/agent-skills-vscode"
  },
  "homepage": "https://github.com/lauridskern/agent-skills-vscode#readme",
  "bugs": {
    "url": "https://github.com/lauridskern/agent-skills-vscode/issues"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "keywords": [
    "ai",
    "agent",
    "skills",
    "cursor",
    "claude",
    "codex",
    "coding assistant"
  ],
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "activationEvents": [
    "onView:agentSkillsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentSkills",
          "title": "Agent Skills",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "agentSkills": [
        {
          "type": "webview",
          "id": "agentSkillsView",
          "name": "Agent Skills"
        }
      ]
    },
    "commands": [
      {
        "command": "agentSkills.refresh",
        "title": "Refresh Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "agentSkills.installSkill",
        "title": "Install Skill",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agentSkills.refresh",
          "when": "view == agentSkillsView",
          "group": "navigation"
        },
        {
          "command": "agentSkills.installSkill",
          "when": "view == agentSkillsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "release": "npm version patch && git push origin main --tags",
    "release:current": "git tag v$(node -p \"require('./package.json').version\") && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "yaml": "^2.3.4"
  }
}
